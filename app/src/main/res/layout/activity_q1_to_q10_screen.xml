<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="uk.ucl.group21.currentviewapp.Q1ToQ10">

    <Button
            android:text="@string/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="64dp" android:onClick="btnNext" android:id="@+id/NextQ1"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical|horizontal"
            android:fillViewport="true" android:layout_marginLeft="0dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginTop="60dp">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_layout">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Empty"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textColor="#ffffff"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Provisional_Problem_Description"
                        android:textStyle="bold"
                        android:layout_column="2"
                        android:layout_weight="2"
                        android:textSize="24sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/None"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Mild"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Moderate"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:textScaleX="0.8"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Severe"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Not_Known"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:textScaleX="0.8"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1"
                        android:id="@+id/textView1"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q1"
                        android:id="@+id/textView2"
                        android:layout_column="2"
                        android:layout_weight="2"
                        android:textSize="18sp" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1.1"
                        android:layout_column="3"
                        android:textAlignment="center"
                        android:layout_weight="1" android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1.2"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1.3"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1.4"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton1.5"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q2"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2.1"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2.2"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2.3"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2.4"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2.5"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="3"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q3"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3.1"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3.2"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3.3"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3.4"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3.5"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>
            </TableRow>

            <!-- Question 4 -->
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="4"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q4"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/none4"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mild4"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moderate4"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/severe4"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not_known4"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>