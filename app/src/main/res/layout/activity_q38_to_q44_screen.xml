<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="uk.ucl.group21.currentviewapp.Q38ToQ44">

    <Button
            android:text="@string/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="64dp" android:onClick="btnNextQ38to44" android:id="@+id/NextQ4"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical|horizontal"
            android:fillViewport="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_marginTop="60dp">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_layout">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Empty"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textColor="#ffffff"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Provisional_Problem_Description"
                        android:textStyle="bold"
                        android:layout_column="2"
                        android:layout_weight="2"
                        android:textSize="24sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/None"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Mild"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Moderate"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:textScaleX="0.8"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Severe"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:minWidth="50dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/Not_Known"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal" android:textScaleX="0.8"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
            </TableRow>

            <!-- Question 38 -->
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="38"
                        android:id="@+id/textView1"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q38"
                        android:id="@+id/textView2"
                        android:layout_column="2"
                        android:layout_weight="2"
                        android:textSize="18sp" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/none38"
                        android:layout_column="3"
                        android:textAlignment="center"
                        android:layout_weight="1" android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mild38"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moderate38"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/severe38"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not_known38"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>

            </TableRow>

            <!-- Question 39 -->
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="39"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q39"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/none39"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mild39"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moderate39"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/severe39"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not_known39"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>
            </TableRow>

            <!-- Question 40 -->
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="40"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q40"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/none40"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mild40"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moderate40"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/severe40"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not_known40"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>

            </TableRow>

            <!-- Question 41 -->
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="41"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/q41"
                        android:layout_column="2"
                        android:textSize="18sp"
                        android:layout_weight="2" android:maxWidth="300dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/none41"
                        android:layout_column="3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mild41"
                        android:layout_column="4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moderate41"
                        android:layout_column="5"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/severe41"
                        android:layout_column="6"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" android:width="25dp"/>

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/not_known41"
                        android:layout_column="7"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp" android:layout_gravity="center_horizontal"
                        android:width="25dp"/>
            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>